                                @using (Html.BeginForm("Notify","Advertisement", FormMethod.Post))

                                {

                                <table class="table table-bordered table-hover">

                                    <tbody>
                                    <tr>
                                        <td>
                                            @Html.HiddenFor(model => model.Id, new { Value = ViewBag.AdvertisementId })



                                            نص الاشعار
                                            <span class="required">*</span>
                                        </td>
                                        <td>
                                            @Html.TextAreaFor(u => u.Content, new { @class = "form-control", @rows = "4", @placeholder = "لا يزيد عن 250 حرف" })
                                            @Html.ValidationMessageFor(model => model.Content, null, new { @class = "danger" })




                                        </td>
                                    </tr>
                                    <tr>
                                        <td></td>

                                        <td>
                                            <button type="submit" class="btn btn-success pull-right"><i class="glyphicon glyphicon-floppy-disk"></i>  ارسال </button>


                                        </td>
                                    </tr>
                                    </tbody>
                                </table>
                            }

                        </div>
                    </div>

                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
            @*<div id="Search">  </div>*@

        </div>

    </section>
    
</div>

