@using System.Web.UI.WebControls
@model Saned.Jazan.ControlPanel.ViewModels.TouristVisitsUserSearchModel
    @{
        ViewBag.Title = "الزيارات السياحية";
        Layout = "~/Views/Shared/_Layout.cshtml";
        AjaxOptions options = new AjaxOptions
        {
            UpdateTargetId = "searchResult",
            InsertionMode = InsertionMode.Replace,
            LoadingElementId = "ajaxLoaderDiv"
        };
    }
<div class="content-wrapper">

    @Html.Partial("_Flash")




    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>

            <small>قائمة الزيارات السياحية</small>
        </h1>
        <ol class="breadcrumb">
            <li>
                <a onclick="showPageLoadingSpinner()"
                   href="@Url.Action("Index", "Home")">
                    <i class="fa fa-dashboard"></i>الرئيسية
                </a>
            </li>

            <li class="active">
                 <i class="fa fa-tripadvisor"></i>الزيارات السياحية
            </li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-success">
                    <div class="row">
                        <div class="box-header">
                            <div class="col-md-6 col-xs-12">
                                <h3 class="box-title">
                                    عرض الزيارات السياحية
                                </h3>
                            </div>
                            <div class="col-md-6 col-xs-12">
                                <h3 class="box-title pull-right"></h3>
                            </div>
                        </div>
                    </div>
                    <!-- /.box-header -->
                    @using (Ajax.BeginForm("Search", options))
                    {
                        <div class="form-group">
                            <div class="input-group box-body">

                                @Html.EditorFor(model => model.Keyword, new { htmlAttributes = new { @class = "form-control", PlaceHolder = "ادخل كلمة البحث" } })

                                <span class="input-group-btn">
                                    <button type="submit" class="btn btn-success pull-right"><i class="glyphicon glyphicon-search"></i>بحث</button>
                                </span>
                            </div>
                        </div>
                    }

                    <div id="searchResult">

                        @Html.Action("Search", new { keyword = "", page = 1 })
                    </div>


                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->


</div>




















