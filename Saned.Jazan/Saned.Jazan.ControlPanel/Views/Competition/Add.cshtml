        display: inline-block;
        vertical-align: middle;
        width: 18px;
        height: 18px;
        background-size: 100%;
        margin-left: 5px;
        border-radius: 50%;
    }

    .ads {
        display: inline-block;
        vertical-align: middle;
        width: 50px;
        height: 50px;
        background-size: 100%;
        margin-right: 5px;
        border-radius: 50%;
    }

    #Advertisements-list .k-item {
        line-height: 1em;
        min-width: 300px;
    }

    /* Material Theme padding adjustment*/

    .k-material #Advertisements-list .k-item,
