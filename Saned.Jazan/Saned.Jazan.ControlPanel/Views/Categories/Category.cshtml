@model Saned.Jazan.ControlPanel.ViewModels.CategorySearchModel
@{
    ViewBag.Title = "التصنيفات";
    var photo = new Saned.Jazan.Data.Core.Models.NewsImage();
    AjaxOptions options = new AjaxOptions
    {
        UpdateTargetId = "searchResult",
        //Confirm = "Are you sure to start search?",
        InsertionMode = InsertionMode.Replace,
        // LoadingElementId = "ajaxLoaderDiv"
        LoadingElementId = "ajaxLoaderDiv"
    };

}
<div class="content-wrapper">
    @Html.Partial("_Flash")


    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>

            <small>التصنيفات </small>
        </h1>
        <ol class="breadcrumb">
            <li><a onclick="showPageLoadingSpinner()" href="@Url.Action("Index", "Home")"><i class="fa fa-dashboard"></i>الرئيسية</a></li>
            <li class="active">  <i class="glyphicon glyphicon-tags"></i>التصنيفات  </li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-success">
                    <div class="row">
                        <div class="box-header">
                            <div class="col-md-6 col-xs-12">
                                <h3 class="box-title">

                                    قائمة التصنيفات الرئيسية
                                    
                                </h3>
                            </div>
                            <div class="col-md-6 col-xs-12">
                                <h3 class="box-title pull-right">
                                    <a onclick="showPageLoadingSpinner()" href="@Url.Action("AddCategory", "Categories")" type="button" class="btn btn-success"> إضافة تصنيف رئيسي</a>

                                </h3>
                            </div>
                        </div>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">


                        @using (Ajax.BeginForm("SearchCategory", options))
                        {
                            <form role="form">
                                <div class="input-group">
                                    @Html.EditorFor(model => model.Keyword, new { htmlAttributes = new { @class = "form-control", PlaceHolder = "ادخل كلمة البحث" } })
                                    <span class="input-group-btn">
                                        <button class="btn btn-success" type="submit">بحث </button>
                                    </span>
                                </div><!-- /input-group -->


                            </form>








                        }
                        <div id="searchResult">

                            @Html.Action("SearchCategory", new { CategoryId = 0, page = 1 })
                        </div>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>


<script>

    function ChangePageSize(bt) {
        $('#form0').submit();
    }
</script>
