@model Saned.Jazan.Data.Core.Models.ApplicationUser
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <h1>

            <small>قائمة المستخدمين</small>
        </h1>
        <ol class="breadcrumb">
            <li>
                <a onclick="showPageLoadingSpinner()"
                   href="@Url.Action("Index", "Home")">
                    <i class="fa fa-dashboard"></i>الرئيسية
                </a>
            </li>
            <li>
                <a onclick="showPageLoadingSpinner()"
                   href="@Url.Action("Index", "Users")">
                    <i class="fa fa-user"></i>المستخدمين
                </a>
            </li>
            <li class="active">تفاصيل المستخدم</li>
        </ol>
    </section>  
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-success">
                    <div class="row">
                        <div class="box-header">
                            <div class="col-md-6 col-xs-12">
                                <h3 class="box-title">
                                    عرض بيانات المستخدم
                                </h3>
                            </div>
                            <div class="col-md-6 col-xs-12">
                                <h3 class="box-title pull-right"></h3>
                            </div>
                        </div>
                    </div>
                    <div class="box-body">
                        <div id="userdetails">
                            <ul class="nav nav-tabs">
                                <li class="active"><a data-toggle="tab" href="#details">بيانات المستخدم</a></li>

                                <li><a data-toggle="tab" href="#home">اعلانات المستخدم</a></li>
                                <li><a data-toggle="tab" href="#UserTouristVisits">الزيارات السياحية</a></li>
                                @*<li>
                    <a data-toggle="tab" href="#menu2">Menu 2</a>
                </li>
                <li><a data-toggle="tab" href="#menu3">Menu 3</a></li>*@
                            </ul>

                            <div class="tab-content">

                                <div id="details" class="tab-pane fade in active">
                                    <div id="user-information">

                                        <div class="container">
                                            <div class="row">
                                                <div class="col-xs-12 col-sm-11 col-md-11">
                                                    <div class="well well-sm">
                                                        <div class="row">
                                                            <div class="col-sm-6 col-md-4">
                                                                <img src="@(ViewBag.FrontEndUrl + "" + Model.PhotoUrl)" onerror="this.onerror = null;this.src = '/Content/dist/img/noimagedefault.jpg'" class="img-rounded img-responsive" />

                                                            </div>
                                                            <div class="col-sm-6 col-md-8">
                                                                <h4>
                                                                    @Html.DisplayFor(model => model.Name)
                                                                </h4>
                                                                <small>

                                                                    @Html.DisplayFor(model => model.UserName)




                                                                </small>
                                                                <p>
                                                                    <i class="glyphicon glyphicon-envelope"></i>
                                                                    @Html.DisplayFor(model => model.Email)
                                                                    <br />
                                                                    <i class="fa fa-phone"></i>

                                                                    @Html.DisplayFor(model => model.PhoneNumber)


                                                                    <br />
                                                                </p>
                                                                <!-- Split button -->
                                                                <div class="btn-group">

                                                                    @if (Model.IsApprove.Value)
                                                                    {
                                                                        <span class="sucess"> مفعل </span>
                                                                    }
                                                                    else
                                                                    {
                                                                        <span class="danger">غير مفعل </span>

                                                                    }

                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    </div>




                                </div>
                                <div id="home" class="tab-pane fade">
                                    <div id="UserAdvertisement">
                                        @Html.Action("UserAdvertisement", new { id = Model.Id })


                                    </div>
                                </div>
                                <div id="UserTouristVisits" class="tab-pane fade">

                                    @Html.Action("UserTouristVisits", new { id = Model.Id })


                                </div>
                            
                            </div>
                        </div>
                    </div>
                    

                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
            @*<div id="Search">  </div>*@

        </div>
    </section>
</div>
                            

<style>
   

small {
display: block;
line-height: 1.428571429;
color: #999;
}
</style>


   




