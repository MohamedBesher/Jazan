@model Saned.Jazan.Admin.Models.NewsImagesModel

@if (Model != null)
{
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        @Html.HiddenFor(model => model.NewsId, new
        {
            id = string.Format("NewsImagesModel[{0}].NewsId", ViewBag.ImageIndex),
            Name = string.Format("NewsImagesModel[{0}].NewsId", ViewBag.ImageIndex),
            @class = "form-control "
        })
        @Html.HiddenFor(model => model.ImageId, new
        {
            id = string.Format("NewsImagesModel[{0}].ImageId", ViewBag.ImageIndex),
            Name = string.Format("NewsImagesModel[{0}].ImageId", ViewBag.ImageIndex),
            @class = "form-control "
        })
       
        <div class="col-lg-12 col-md-12 col-xs-12 ImageContainer" >
         
                <tr>
                    <td>

                        <div class="form-group">
                            @Html.LabelFor(model => model.ImagePath, htmlAttributes: new {@class = "col-sm-2 col-xs-12 control-label"})
                            <div class="col-sm-6 col-xs-8">
                                @Html.TextBoxFor(model => model.ImagePath, Model.ImagePath, new
                                {
                                    type = "file",
                                    id = string.Format("NewsImagesModel[{0}].ImagePath", ViewBag.ImageIndex),
                                    Name = string.Format("NewsImagesModel[{0}].ImagePath", ViewBag.ImageIndex),
                                    @class = "form-control",
                                    @data_val = "true",
                                    @data_val_required = ""

                                })
                                @Html.ValidationMessageFor(model => model.ImagePath, "", new {@class = "text-danger"})
                            </div>
                            <div class="col-sm-2 col-xs-4">
                                @Html.CheckBoxFor(model => model.IsDefault, new
                                {
                                    id = string.Format("NewsImagesModel[{0}].IsDefault", ViewBag.ImageIndex),
                                    Name = string.Format("NewsImagesModel[{0}].IsDefault", ViewBag.ImageIndex),
                                    @class = "form-control "
                                })
                            </div>

                        </div>

                    </td>
                  



                </tr>
  
          
        </div>




    }
}


